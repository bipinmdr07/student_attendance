<div class="row">
	<div class="column medium-6 medium-offset-3">

		<h3>設定を変更する</h3>

		<%= simple_form_for @setting, url: '/admin_settings', method: :patch do |f| %>
			<%= f.input :password, placeholder: "パスワード" %>
			<%= f.input :admin_password, placeholder: "管理者パスワード" %>
			<%= f.input :header_text, placeholder: "トップテキスト" %>
			<%= f.input :footer_text, placeholder: "フッターテキスト" %>	
			<%= f.input :top_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>
			<%= f.input :button_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>		
      <%= f.input :secondary_button_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>		
      <%= f.input :third_button_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>		
      <%= f.input :footer_color, as: :minicolors, input_html: {data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>	
			<%= f.submit class: 'button float-right' %>
		<% end %>

	</div>
</div>