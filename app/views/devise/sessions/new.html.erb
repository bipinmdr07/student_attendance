<div class="row">
	<div class="columns medium-6 medium-offset-3 small-12">

		<h3>管理者ログイン</h3>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {autocomplete: "nope"}) do |f| %>	
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, readonly: true %>
		    
		    <%= f.input :password, required: false, readonly: true %>

		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "ログインする" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>

<script type="text/javascript">
let emailField = $("#admin_email");
let passwordField = $("#admin_password");

function removeReadOnly(e){
	let that = e.target;

	if (that.hasAttribute('readonly')) {
    that.removeAttribute('readonly');
    that.blur();    
    that.focus();  
  }
}

emailField.on("focus", removeReadOnly);
passwordField.on("focus", removeReadOnly);

</script>