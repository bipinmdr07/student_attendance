<div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
  <button class="menu-icon" type="button" data-toggle></button>
  <div class="title-bar-title">メニュー</div>
</div>

<div class="top-bar" id="example-menu">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li>
        <a href="/" style="padding: 0.2rem 1rem;">
          <%= image_tag 'logo.png', class: 'brand' %>
        </a>
      </li>      
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if admin_signed_in? %>
        <li class="menu-text"><%= link_to '検索する', admin_students_path %></li>
        <li class="menu-text"><%= link_to '出席確認', admin_dashboard_index_path %></li>
        <li class="menu-text"><%= link_to '生徒登録', new_admin_student_path %></li>
        <li class="menu-text"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
      <% else %>
        <li class="menu-text"><%= link_to '検索する', search_path %></li>
        <li class="menu-text"><%= link_to '管理者ログイン', new_admin_session_path %></li>        
      <% end %>
    </ul>
  </div>
</div>
